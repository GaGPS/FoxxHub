<script>
  function copyScript() {
    const text = document.getElementById("code").innerText;
    navigator.clipboard.writeText(text).then(() => {
      const msg = document.getElementById("copiedMsg");
      msg.style.display = "block";
      setTimeout(() => msg.style.display = "none", 2000);
    });
  }
</script>

